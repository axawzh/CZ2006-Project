<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.klipspringercui.sgbusgo.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:text="ETA"
        android:layout_height="wrap_content"
        android:id="@+id/btnETA"
        tools:layout_editor_absoluteY="32dp"
        tools:layout_editor_absoluteX="32dp"
        android:layout_width="wrap_content" />

    <Button
        android:text="Fare Calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFareCalculator"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnETA"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnETA"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <Button
        android:text="Alighting Alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAlightingAlarm"
        app:layout_constraintLeft_toLeftOf="@+id/btnETA"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnETA" />

    <Button
        android:text="My Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnProfile"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnAlightingAlarm"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnAlightingAlarm"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />
</android.support.constraint.ConstraintLayout>

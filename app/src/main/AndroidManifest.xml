<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.klipspringercui.sgbusgo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ETAActivity"
            android:label="@string/title_activity_eta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".BusStopSelectionActivity" />
        <activity
            android:name=".AlightingAlarmActivity"
            android:label="@string/title_activity_alighting_alarm"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FareCalculatorActivity"
            android:label="@string/title_activity_fare_calculator"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchBusStopActivity"
            android:label="@string/title_activity_search_bus_stop"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.klipspringercui.sgbusgo.BusStopSelectionActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>
    </application>

</manifest>